<!--ユーザーインフォを入れる　ここから-->
<p>
  <h2>User info</h2>
  <% if @customer.profile_image.attached? %>
    <%= image_tag customer.profile_image.variant(resize:'100, 100')%>
  <% else %>
      <%= image_tag 'no_image.jpg', size:'50x50' %>
  <% end %>
</p>
   <table class="table">
    <tbody>
     <tr>
       <th>Name</th>
       <th><%= @customer.name %></th>
     </tr>
     <tr>
       <th>Introduction</th>
       <th><%= @customer.introduction %></th>
     </tr>
 <!--ユーザーインフォを入れる　ここまで-->


<!-- User infoのところのfollowsとfollowersのところの
数字がリンクになっていてそこからページ遷移する -->
      <tr>
      <th>
        follows   <%= link_to customer_followings_path(@customer.id) do %>
          <%= @customer.followings.count %>
        <% end %>
      </th>
     </tr>
     <tr>
      <th>
        followers  <%= link_to  customer_followers_path(@customer.id) do %>
          <%= @customer.followers.count %>
        <% end %>
      </th>
     </tr>


    </tbody>
   </table>

<!-- フォローボタン -->
<!--ユーザが現在ユーザなら表示させない-->
<% if @customer != current_customer %>
  <% if current_customer.following?(@customer) %>
    <%= link_to customer_relationships_path(@customer.id), method: :delete do %>
      <button type="button" class="btn btn-success mb-4">フォローを外す</button>
    <% end %>
  <% else %>
    <%= link_to customer_relationships_path(@customer.id), method: :post do %>
      <button type="button" class="btn btn-info mb-4">フォローする</button>
    <% end %>
  <% end %>
<% end %>


 <!--編集用ボタン-->
   <div class="row">
   <%# if customer.id == current_customer.id %>
    <%= link_to edit_customer_path(@customer.id), class: "btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
    <% end %>
   <%# end %>
   </div>