<!--コメント欄、コメント入力欄ここから-->
    <tbody>
     <!--この目標に対して入力されたコメントを抽出することを繰り返す-->
     <% goal.goal_comments.each do|goal_comment| %>
        <tr>

          <th scope="col"></th>
          <!--読み込むeachの文-->
           <th scope="col">
            <!--ユーザページに飛ばす画像と名前のところ両方とも-->
            <p>
             <%= link_to customer_path(goal_comment.customer.id) do %>
              <% if @customer.profile_image.attached? %>
                <%= image_tag goal_comment.customer.profile_image(resize:'40, 40')%>
              <% else %>
                <%= image_tag 'no_image.jpg', size:'40x40' %>
              <% end %>
              <%#= attachment_image_tag goal_comment.customer, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
             <% end %>
            </p>
            <!--ユーザページに飛ばす画像と名前のところ両方とも-->
            <p><%= link_to goal_comment.customer.name,customer_path(goal_comment.customer.id) %></p>
           </th>
             <!--コメント-->
             <th scope="col">
              <%= goal_comment.customer_comment %>
             </th>

             <% if current_customer == goal_comment.customer %>
              <th scope="col">
               <%= link_to "Destroy", goal_goal_comment_path(goal_comment.goal_id, goal_comment.id), method: :delete, class:"btn btn-sm btn-danger" %>
              </th>
              <th></th>
             <% end %>
           <% end %>
        </tr>
        <!--読み込むeachの文のend-->


        <!--目標に対するコメント-->
        <tr>
         <th scope="col">
          <%= form_with(model:[goal,goal_comment], local:true) do |f| %>
            <%= f.text_area :customer_comment %>
             <%= f.submit '送信' %>
          <% end %>
         </th>
        </tr>
    </tbody>
    <!--コメント欄、コメント入力欄ここまで-->